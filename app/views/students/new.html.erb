<div class="card-student-infos">
  <h3><strong><%=current_user.email%></strong>
</div>

<div class="container">
  <div class="row justify-content-center">
    <h3 class="title-form"><strong>Nouvelle Eleve</strong></h3>
  </div>
  <div class="row justify-content-center">
    <%= form_with scope: :student, url: students_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name , class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_area :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
