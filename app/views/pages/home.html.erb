<div class="body">
  <div class="image_color">
    <div class="hello" id="typed-strings">
      <small>“Un enfant, un professeur, un livre, un crayon peuvent changer le monde.” <br>
      Malala Yousafzai</small>
    </div>
  </div>
  <div class="user_hello">
    <h4> Welcome!  <%= @user.email %> </h4>
  </div>
  <div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 display-4">My students</h4>
  </div>
  <%= link_to 'My students', students_path %>
</div>

   <% if @students.present? %>
    <div class="row justify-content-center">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">First name</th>
            <th scope="col">Second name</th>
            <th scope="col" colspan="3">Action</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |s| %>
            <tr>
              <td><%= s.first_name %></td>
              <td><%= s.last_name %></td>
              <td><%= link_to 'Show', observations_path(s.id) %></td>
              <td><%= link_to 'Edit', new_observation_path(s.id) %></td>
               <td><%= link_to 'Delete',
              student_path(s.id),
              method: :delete,
              data: { confirm: 'Are you sure to delete ?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
  <% end %>
</div>

  <div class="list_students">
    <%@students.each do |s| %>
      <div class="container">
      <%= s.last_name  %>
      </div>
     <% end %>
  </div>
